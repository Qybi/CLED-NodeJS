<div class="row m-5">
  <div class="col-5">
    <div class="card" style="width: 18rem">
      <div class="card-body">
        <form action="/login" method="POST">
          <div class="form-group">
            <label for="username">Username</label>
            <input
              type="text"
              class="form-control"
              name="label"
              id="username"
              placeholder="username"
            />
          </div>
          <button type="submit" class="btn btn-primary">Login</button>
        </form>
      </div>
    </div>
  </div>
</div>
