<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-5">
                    <form action="/edit" method="post">
                        <input type="number" hidden name="id" value="<%= obj.id %>">
                        <div class="form-group">
                            <label for="label">Label</label>
                            <input type="text" class="form-control" value="<%= obj.label %>" id="label" name="label" placeholder="label">
                        </div>
                        <div class="form-check">
                            <input type="checkbox" id="done" <%= obj.done ? "checked" : "unchecked" %> class="form-check-input" name="done">
                            <label class="form-check-label" for="done">Completed</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>